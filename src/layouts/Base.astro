---
import "../styles/chat.css";
const rawBase = import.meta.env.BASE_URL ?? Astro.site?.pathname ?? '/';
const base = rawBase.endsWith('/') ? rawBase : `${rawBase}/`;
const { title, noIndex = false } = Astro.props;
---
<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title ? `${title} · Reflections` : 'Reflections'}</title>
    {noIndex && <meta name="robots" content="noindex,nofollow" />}
  </head>
  <body>
    <header class="site-header">
      <a class="brand" href={base}>Reflections</a>
    </header>
    <main class="container">
      <slot />
    </main>
    <footer class="site-footer">
      <small>Innovation Methods · {new Date().getFullYear()}</small>
    </footer>
  </body>
</html>
